<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
	    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.1.xsd">

    <context:property-placeholder location="classpath:/app.properties"/>

    <bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource"
          p:basenames="classpath:messages/messages"
          p:cacheSeconds="10"
          p:defaultEncoding="UTF-8"
          p:fallbackToSystemLocale="false"
          p:useCodeAsDefaultMessage="true"/>

    <import resource="classpath:hibernate-config.xml"/>
    <import resource="classpath:core-config.xml"/>

    <!-- Aspect Methods -->
    <aop:aspectj-autoproxy proxy-target-class="true"/>

    <bean id="jacksonObjectMapper" class="com.smallgroupnetwork.web.serialization.HibernateAwareObjectMapper"/>

</beans>
